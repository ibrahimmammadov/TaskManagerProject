@model ProjectUI.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "LogIn";
}

<div class="row">

    <div class="col-md-4 offset-md-4">
        <h4>Sign In as Organization or User</h4>
        <hr />
        <form asp-action="SignIn" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="UserType" class="control-label"></label>
                <select class="form-control" asp-for="UserType" asp-items="@ViewBag.usertype"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Sign In" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>