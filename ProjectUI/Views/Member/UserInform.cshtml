@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_Member.cshtml";
}

@model ProjectUI.Models.UserApp



<h3 class="text-center">User Information</h3>
<div class="row">
    <div class="col-sm-6">

        <table class="table table-bordered table-striped">
            <tr>
                <th>Username</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
              <tr>
                <th>Surname</th>
                <td>@Model.Surname</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>
                    @if (!String.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        @Model.PhoneNumber
                    }
                    else

                    {
                        <span>not specified</span>
                    }
                </td>
            </tr>
        </table>
    </div>
</div>